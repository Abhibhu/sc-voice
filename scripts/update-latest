#!/bin/bash

echo -e "UPDATE\t: $0 START `date`"

sudo apt-get update

echo -e "UPDATE\t: ***NOT IMPLEMENTED***"

exit 0

REBOOT=0
OPTIND=1
while getopts "r" opt; do
    case "$opt" in
    r)  REBOOT=1
        ;;
    esac
done
shift $((OPTIND-1))
[ "$1" = "--" ] && shift

echo -e "UPDATE\t: Installing dependencies..."
npm install
sync

echo -e "UPDATE\t: Building web server..."
npm run build
sync

if [ "$REBOOT" == "1" ]; then
    sudo shutdown -r now
fi

while true; do
    echo -e "UPDATE\t: SC-Voice update requires a reboot"
    read -p "UPDATE  : Reboot now? [y,n]:" REBOOT
    case $REBOOT in
        [y]* ) sudo shutdown -r now; break;;
        [n]* ) break;;
           * ) echo "        : Please enter 'y' or 'n'";;
    esac
done

echo -e "UPDATE\t: $0 END `date`"
